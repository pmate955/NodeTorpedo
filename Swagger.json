---
swagger: '2.0'
host: localhost:3000
schemes:
- http
- https
info:
  title: Node Torpedo
  version: 0.0.1
paths:
  "/boards/playerA":
    get:
      description: "Get playerA board"
      responses:
        '200':
          description: "Returns playerA board"
          schema:
            "$ref": "#/definitions/Board"
    put:
      description: "Change board"
      parameters:
      - name: board
        in: body
        required: true
        schema:
          "$ref": "#/definitions/Board"
      responses:
        '200':
          description: "Returns new board of player A"
          schema:
            "$ref": "#/definitions/Board"
  "/boards/playerB":
    get:
      description: "Get player B board"
      responses:
        '200':
          description: "Returns player B board"
          schema:
            "$ref": "#/definitions/Board"
    put:
      description: "Change board of player B"
      parameters:
      - name: "new board"
        in: body
        required: true
        schema:
          "$ref": "#/definitions/Board"
      responses:
        '200':
          description: "Returns Player B new board"
          schema:
            "$ref": "#/definitions/Board"
  "/boards/playerA/shoot":
    post:
      description: "Shoot to x y coordinate of player A"
      parameters:
      - name: coordinates
        in: body
        required: true
        schema:
          type: object
          properties:
            x:
              type: integer
            y:
              type: integer
      responses:
        '200':
          description: "Return the result of shot"
          schema:
            type: object
            properties:
              result:
                type: string
  "/boards/playerB/shoot":
    post:
      description: "Shoot to x y coordinate of player B"
      parameters:
      - name: "coordinates"
        in: body
        required: true
        schema:
          type: object
          properties:
            x:
              type: integer
            y:
              type: integer
      responses:
        '200':
          description: "Return the result"
          schema:
            type: object
            properties:
              result:
                type: string
definitions:
  Board:
    type: array
    items:
      type: array
      items:
        type: integer
